{
  "manifest_version": 3,
  "name": "Twitter Print Styles",
  "version": "3.0.0",
  "description": "Simple print styles for saving Twitter/X threads as PDFs.",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "css": ["index.css"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": "icon-128.png"
  },
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ]
}
